{% extends template('widget') %}

{% define data = {
    form: _widget.form,
    order: _widget.order,
    isVisible: _widget.isVisible,
    returnUrl: _widget.returnUrl,
} %}

{% block body %}
    {% if data.isVisible %}
        {{ form_start(data.form, {'action': path('order/cancel', {
            'orderReference': data.order.orderReference,
            'returnUrl': data.returnUrl
        })}) }}

        {% block embeddedData %}
            <input class="button" type="submit" value="{{ 'order_cancel_widget.cancel_order' | trans }}">
        {% endblock %}

        {{ form_end(data.form) }}
    {% endif %}
{% endblock %}
